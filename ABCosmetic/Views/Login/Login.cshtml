@model ABCosmetic.Models.User

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>ABCosmetic</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="robots" content="all,follow">
    <!-- Bootstrap CSS-->
    <link rel="stylesheet" href=@Url.Content("/Template/vendor/bootstrap/css/bootstrap.min.css")>
    <!-- Font Awesome CSS-->
    <link rel="stylesheet" href=@Url.Content("/Template/vendor/font-awesome/css/font-awesome.min.css")>
    <!-- Fontastic Custom icon font-->
    <link rel="stylesheet" href=@Url.Content("/Template/css/fontastic.css")>
    <!-- Google fonts - Roboto -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700">
    <!-- jQuery Circle-->
    <link rel="stylesheet" href=@Url.Content("/Template/css/grasp_mobile_progress_circle-1.0.0.min.css")>
    <!-- Custom Scrollbar-->
    <link rel="stylesheet" href=@Url.Content("/Template/vendor/malihu-custom-scrollbar-plugin/jquery.mCustomScrollbar.css")>
    <!-- theme stylesheet-->
    <link rel="stylesheet" href=@Url.Content("/Template/css/style.default.css") id="theme-stylesheet">
    <!-- Custom stylesheet - for your changes-->
    <link rel="stylesheet" href=@Url.Content("/Template/css/custom.css")>
    <!-- Favicon-->
    <link rel="shortcut icon" href=@Url.Content("/Template/img/favicon.ico")>
    <!-- Tweaks for older IEs-->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script><![endif]-->
</head>
<body>


    @using (Html.BeginForm())
    {
        <div class="page login-page">
            <div class="container d-flex justify-content-center">
                <div class="form-outer text-center d-flex align-items-center">
                    <div class="form-inner" style="width: 400px">
                       <h2>ABCosmetic</h2>
                       <form method="post" class="text-left form-validate">
                           @Html.AntiForgeryToken()
                           @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                           <div class="form-group-material">
                               @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @id = "login-username", @type = "text", @name = "loginUsername", @class = "input-material" } })
                               @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                               <label for="login-username" class="label-material">Username</label>
                           </div>
                           <div class="form-group-material">
                               @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @id = "login-password", @type = "password", @name = "loginPassword", @class = "input-material" } })
                               @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                               <label for="login-password" class="label-material">Password</label>
                           </div>
                           <div class="form-group text-center">
                               <input type="submit" class="btn btn-primary" value="Login" />
                           </div>
                       </form>
                    </div>
                    
                </div>
            </div>
        </div>
    }



    <!-- JavaScript files-->
    <script src=@Url.Content("/Template/vendor/jquery/jquery.min.js")></script>
    <script src=@Url.Content("/Template/vendor/popper.js/umd/popper.min.js")></script>
    <script src=@Url.Content("/Template/vendor/bootstrap/js/bootstrap.min.js")></script>
    <script src=@Url.Content("/Template/js/grasp_mobile_progress_circle-1.0.0.min.js")></script>
    <script src=@Url.Content("/Template/vendor/jquery.cookie/jquery.cookie.js")></script>
    <script src=@Url.Content("/Template/vendor/chart.js/Chart.min.js")></script>
    <script src=@Url.Content("/Template/vendor/jquery-validation/jquery.validate.min.js")></script>
    <script src=@Url.Content("/Template/vendor/malihu-custom-scrollbar-plugin/jquery.mCustomScrollbar.concat.min.js")></script>
    <script src=@Url.Content("/Template/js/charts-home.js")></script>
    <!-- Main File-->
    <script src=@Url.Content("/Template/js/front.js")></script>
</body>
</html>
